FROM alpine

RUN apk add --no-cache bash tzdata

RUN mkdir /data && \
    mkdir /config && \
    mkdir /certs && \
    mkdir /db && \
    mkdir /decisions
VOLUME ["/data", "/config", "/certs", "/db", "/decisions"]

WORKDIR /app

COPY topaz* /app/

ENTRYPOINT ["./topazd"]
CMD ["run", "-c", "/config/config.yaml"]
